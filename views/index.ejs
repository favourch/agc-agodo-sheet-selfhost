<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AGC Agodo Members</title>
    <link href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .highlight-yellow {
            background-color: #ffff99 !important; /* Light yellow */
        }
        .header-spacing {
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">AGC Agodo Members Directory</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container header-spacing">
        <h2>Members Table</h2>
        <table class="table table-striped table-bordered" id="membersTable">
            <thead>
                <tr>
                    <% if (data.headers.length > 0) { %>
                        <% data.headers.forEach(function(header) { %>
                            <th><%= header %></th>
                        <% }); %>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% data.records.forEach(function(record) { %>
                    <tr class="<%= record.status !== 'CONFIRMED' ? 'highlight-yellow' : '' %>">
                        <% data.headers.forEach(function(header) { %>
                            <td><%= record[header] || '' %></td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#membersTable').DataTable({
                responsive: true,
                deferRender: true,
                scroller: true
            });
        });
    </script>
</body>
</html>
